@model AspNetMvcExamples.Models.Product
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-6">
        <img class="img img-responsive"  src="@Url.Content(Model.ImageUrl)" />
    </div>
    <div class="col-md-6">
        <h4>
            @Model.Name
        </h4>
        <h5>
            @Model.Price.ToString("C2")
        </h5>
    </div>
</div>
<div>
    @Html.Action("RelationProductsPartial", new {category = Model.Category})
</div>